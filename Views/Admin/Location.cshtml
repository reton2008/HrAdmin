@{
    ViewBag.Title = "Company Location Creating";
}
<div class="container">
    <form action="SaveLocation" method="post">
        <div class="content">
            <div class="container-fluid">
                <div class="card">
                    <br>
                    @if (Session["type"].ToString() != "4")
                    {
                        <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-map-marker fa-2x"></i>Conpany Location</b>
                        {
                            if (ViewBag.bt == 0)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                    <input name="oid" placeholder="Company ID" class="form-control" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                    <input name="lname" placeholder="Location Name" class="form-control" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                    <input name="bname" placeholder="Bangla Name" class="form-control" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-modal-window"></i></span>
                                                    <input name="add1" placeholder="Address 1" class="form-control" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                                    <input name="add2" placeholder="Address 2" class="form-control" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    @*<span class="input-group-addon"><i class="glyphicon glyphicon-phone-alt"></i></span>
                                        <input name="tphone" placeholder="Telephone" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <center>
                                        <button value="0" name="bt" type="submit" class="btn bt- btn-info">Save Company <span class="glyphicon glyphicon-store"></span></button>
                                    </center>
                                </div>
                            }
                            else
                            {   @*  Editing Compnay Information*@


                                foreach (System.Data.DataRow US in ViewBag.LocationInfo.Rows)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                        <input value="@US["oid"]" placeholder="Company ID" class="form-control" type="text" disabled>
                                                        <input name="oid" value="@US["oid"]" type="text" hidden>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                        <input name="lname" value="@US["jloc_name"]" placeholder="Company Name" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                        <input name="bname" value="@US["jloc_bnam"]" placeholder="Short Name" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-modal-window"></i></span>
                                                        <input name="add1" value="@US["jloc_add1"]" placeholder="Company Type" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                                        <input name="add2" value="@US["jloc_add2"]" placeholder="Address" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-10 inputGroupContainer">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-phone-alt"></i></span>
                                                        <input name="actv" value="@US["jloc_actv"]" placeholder="Telephone" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <center>
                                            <button value="1" name="bt" type="submit" class="btn bt- btn-info">Save Company <span class="glyphicon glyphicon-store"></span></button>
                                        </center>
                                    </div>

                                }


                            }
                        }
                    }
                    @*Table for showing compnay information*@
                    @if (ViewBag.Location != null)
                    {
                        <div class="col-md-11">
                            <div class="card">
                                <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-map-marker fa-2x"></i>All Company Location</b>
                                <table class="table">
                                    <tbody>
                                        @{
                                            int i = 1;
                                            foreach (System.Data.DataRow dr in ViewBag.Location.Rows)
                                            {

                                                <tr>
                                                    <td class="text-center">@i</td>
                                                    <td colspan="2">@dr["jloc_name"]</td>
                                                    <td>@dr["jloc_bnam"]</td>

                                                    <td class="text-left">@dr["jloc_add1"]</td>

                                                    @if (@dr["jloc_actv"].ToString() == "1")
                                                    {
                                                        <td class="text-right text-success">Active</td>
                                                    }
                                                    else
                                                    {
                                                        <td class="text-right text-danger">Deactivated</td>

                                                    }

                                                    <td class="td-actions text-right">
                                                        @if (Session["type"].ToString() != "4") 
                                                        {
                                                            <a href="Location?bt=1&cpid=@dr["OID"]" class="btn btn-success btn-simple">
                                                                  <i class="fa fa-edit"></i>
                                                            </a>
                                                        }
                                                        @if (Convert.ToInt32(Session["type"]) < 3) 
                                                        {
                                                            if (@dr["jloc_actv"].ToString() == "1")
                                                            {
                                                                <a href="SaveLocation?bt=3&cpid=@dr["OID"]&actv=@dr["jloc_actv"]" onclick="return confirm('Disable  This Location?');" class="btn btn-danger btn-simple">
                                                                    <i class="fa fa-close"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="SaveLocation?bt=3&cpid=@dr["OID"]&actv=@dr["jloc_actv"]" onclick="return confirm('Disable  This Location??');" class="btn btn-success btn-simple">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                            }
                                                        }
                                    
                                                    </td>
                                                </tr>
                                                    i++;
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>



</div>

