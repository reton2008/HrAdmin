@{
    ViewBag.Title = "Create Department";
}
<div class="container">
    <form action="SaveDept" name="dept_form" onsubmit="return validateForm()" method="post">
        <div class="content">
            <div class="container-fluid">
                <div class="card">
                    <br>
                    @if (Session["type"].ToString() != "4")
                    { 
                    <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-briefcase fa-2x text-danger">&nbsp;&nbsp;</i>Create Department</b>
                    
                        if (ViewBag.bt == "0")
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                <input name="oid" placeholder="Dept. ID" class="form-control" type="text" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-king"></i></span>
                                                @{
                                                    <select class="form-control" name="cmp" required>

                                                        <option value="">Select Company</option>

                                                        @foreach (System.Data.DataRow us in ViewBag.Com.Rows)
                                                        {
                                                            <option value="@us["oid"]">@us["acmp_name"]</option>

                                                        }
                                                    </select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                @{
                                                    <select class="form-control" name="dtyp" id="exampleFormControlSelect1" required>

                                                        <option value="">Select Department Type</option>

                                                        @foreach (System.Data.DataRow us in ViewBag.DeptType.Rows)
                                                        {
                                                            <option value="@us["oid"]">@us["dtyp_name"]</option>

                                                        }
                                                    </select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                <input name="dname" placeholder="Department Name" class="form-control" type="text" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                <input name="bname" placeholder="Bangla Name" class="form-control" type="text" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <center>
                                    <button value="0" name="bt" type="submit" class="btn bt- btn-info">Save Information <span class="glyphicon glyphicon-store"></span></button>
                                </center>
                            </div>
                        }
                        else
                        {   @*  Editing Compnay Information*@


                            foreach (System.Data.DataRow US in ViewBag.Deptinfo.Rows)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                    <input value="@US["oid"]" placeholder="Dept. ID" class="form-control" type="text" disabled>
                                                    <input name="oid" value="@US["oid"]" type="text" hidden>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-king"></i></span>
                                                    @{
                                                        <select class="form-control" name="cmp" id="exampleFormControlSelect1">

                                                            <option value="0">Select Company</option>

                                                            @foreach (System.Data.DataRow cp in ViewBag.Com.Rows)
                                                            {

                                                                if (@cp["oid"].ToString() == @US["dept_acmp"].ToString())
                                                                {
                                                                    <option value="@cp["oid"].ToString()" selected>@cp["acmp_name"]</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@cp["oid"].ToString()">@cp["acmp_name"]</option>
                                                                }

                                                            }
                                                        </select>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                    @{
                                                        <select class="form-control" name="dtyp" id="exampleFormControlSelect1">

                                                            <option value="0">Select Department Type</option>

                                                            @foreach (System.Data.DataRow dp in ViewBag.DeptType.Rows)
                                                            {

                                                                if (@dp["oid"].ToString() == @US["dept_dtyp"].ToString())
                                                                {
                                                                    <option value="@dp["oid"].ToString()" selected>@dp["dtyp_name"]</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@dp["oid"].ToString()">@dp["dtyp_name"]</option>
                                                                }

                                                            }
                                                        </select>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                    <input name="dname" value="@US["dept_name"]" placeholder="Department Name" class="form-control" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                    <input name="bname" value="@US["dept_bnam"]" placeholder="Bangla Name" class="form-control" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <center>
                                        <button value="1" name="bt" type="submit" class="btn bt- btn-info">Save Information <span class="glyphicon glyphicon-store"></span></button>
                                    </center>
                                </div>

                            }


                        }
                    }
                    @*Table for showing Designation information*@
                    @if (ViewBag.DeptList != null)
                    {
                        <div class="col-md-11">
                            <div class="card">
                                <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-briefcase fa-2x text-danger">&nbsp;&nbsp;</i>All Designation</b>
                                <table class="table">
                                    <tbody>
                                        @{
                                            
                                            int i = 1;
                                            foreach (System.Data.DataRow dr in ViewBag.DeptList.Rows)
                                            {


                                                <tr>
                                                    <td class="text-center">@i</td>
                                                    <td colspan="2">@dr["dept_name"]</td>
                                                    <td colspan="2">@dr["acmp_name"]</td>
                                                    <td>@dr["dtyp_name"]</td>

                                                    @if (@dr["dept_actv"].ToString() == "1")
                                                    {
                                                        <td class="text-right text-success">Active</td>
                                                    }
                                                    else
                                                    {
                                                        <td class="text-right text-danger">Deactivated</td>

                                                    }

                                                    <td class="td-actions text-right">
                                                        @if (Session["type"].ToString() != "4") 
                                                        {
                                                            <a href="Department?bt=1&cpid=@dr["OID"]" class="btn btn-success btn-simple">
                                                                <i class="fa fa-pencil"></i>
                                                            </a>
                                                        }
                                                        
                                                        @if (Convert.ToInt32(Session["type"]) < 3) 
                                                        {
                                                            if (@dr["dept_actv"].ToString() == "1")
                                                            {
                                                                <a href="SaveDept?bt=3&cpid=@dr["OID"]&actv=@dr["dept_actv"]" onclick="return confirm('Are you sure you want to disable this Deparment?');" class="btn btn-danger btn-simple">
                                                                   <i class="fa fa-close"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="SaveDept?bt=3&cpid=@dr["OID"]&actv=@dr["dept_actv"]" onclick="return confirm('Are you sure  you want to enable this Deparment?');" class="btn btn-success btn-simple">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                            }
                                                        }
                                                        
                                                    </td>
                                                </tr>
                                                        i++;
                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>


