@{
    ViewBag.Title = "Year Wise Leave";
}
<div class="container">
    <form action="SaveYearWiseLeave" method="post">
        <div class="content">
            <div class="container-fluid">
                <div class="card">
                    <br>
                    @if (Session["type"].ToString() != "4") 
                    {
                    <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-briefcase"></i>Year Wise Leave</b>
                    
                        if (ViewBag.bt == "0")
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                <input name="oid" placeholder="Yearly Leave ID" class="form-control" maxlength="5" type="text" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-king"></i></span>
                                                @{
                                                    <select class="form-control" name="lvtp" id="exampleFormControlSelect1">

                                                        <option value="0">Select Leave Type</option>

                                                        @foreach (System.Data.DataRow us in ViewBag.LeaveType.Rows)
                                                        {
                                                            <option value="@us["oid"]">@us["lvtp_name"]</option>

                                                        }
                                                    </select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                <input name="lday" placeholder="Leave Days" class="form-control" type="number" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10 inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                <input name="year" placeholder="Year" maxlength="4" class="form-control" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <center>
                                    <button value="0" name="bt" type="submit" class="btn bt- btn-info">Save Information <span class="glyphicon glyphicon-store"></span></button>
                                </center>
                            </div>
                        }
                        else
                        {   @*  Editing Compnay Information*@


                            foreach (System.Data.DataRow US in ViewBag.LeaveTypeInfo.Rows)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                                    <input value="@US["oid"]" placeholder="Company ID" class="form-control" type="text" disabled>
                                                    <input name="oid" value="@US["oid"]" type="text" hidden>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                    @{
                                                        <select class="form-control" name="lvtp" id="exampleFormControlSelect1">

                                                            @foreach (System.Data.DataRow dpt in ViewBag.LeaveType.Rows)
                                                            {
                                                                if (@dpt["oid"].ToString() == @US["lvep_lvtp"].ToString())
                                                                {
                                                                    <option value="@dpt["oid"].ToString()" selected>@dpt["lvtp_name"]</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@dpt["oid"].ToString()">@dpt["lvtp_name"]</option>
                                                                }


                                                            }
                                                        </select>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                                    <input name="lday" value="@US["lvep_aday"]" maxlength="3" placeholder="Leave Day" class="form-control" type="number">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
                                                    <input name="year" value="@US["lvep_year"]" maxlength="4" placeholder="Leave Year" maxlength="4" class="form-control" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10 inputGroupContainer">
                                                <div class="input-group">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <center>
                                        <button value="1" name="bt" type="submit" class="btn bt- btn-info">Save Information <span class="glyphicon glyphicon-store"></span></button>
                                    </center>
                                </div>

                            }


                        }
                    }
                    @*Table for showing Designation information*@
                    @if (ViewBag.YearlyLeave != null)
                    {
                        <div class="col-md-11">
                            <div class="card">
                                <b>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-briefcase"></i>All Designation</b>
                                <table class="table">
                                    <tbody>
                                        @{
                                            int i = 1;
                                            foreach (System.Data.DataRow dr in ViewBag.YearlyLeave.Rows)
                                            {


                                                <tr>
                                                    <td class="text-center">@i</td>
                                                    <td colspan="2">@dr["lvtp_name"]</td>
                                                    <td colspan="2">@dr["lvep_aday"]</td>
                                                    <td>@dr["lvep_year"]</td>
                                                    <td class="td-actions text-right">
                                                        @if (Session["type"].ToString() != "4") 
                                                        {
                                                            <a href="YearWiseLeave?bt=1&cpid=@dr["OID"]" class="btn btn-success btn-simple">
                                                                 <i class="material-icons">edit</i>
                                                            </a>
                                                        }                                                    
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>



</div>

