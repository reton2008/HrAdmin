                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="wrapper wrapper-full-page">
    <div class="full-page">
        <div class="content">
            <div class="container">
                <div class="row" style="margin-top:14%;">
                    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                        <form method="post" action="Login/LoginUser">
                            <div class="card card-login card-hidden">
                                <div class="card-header text-center" data-background-color="blue">
                                    <h4 class="card-title">Login</h4>
                                    <div class="social-line">
                                        <a href="http://115.127.105.27/eSales/logon.aspx?ReturnUrl=%2feSales%2fRptViewer.aspx" class="btn btn-just-icon btn-simple">
                                            Esales
                                        </a>
                                        <a href="http://115.127.105.27/eAccounts/logon.aspx?ReturnUrl=%2feaccounts" class="btn btn-just-icon btn-simple">
                                            Eaccounts
                                        </a>
                                    </div>
                                </div>
                                @if (@ViewBag.Message != null)
                                {
                                    <div style="padding:10px" class="alert alert-danger">
                                        <button type="button" aria-hidden="true" class="close">
                                            <i class="material-icons">close</i>
                                        </button>
                                        <span>
                                            <b> Login Error - </b> @ViewBag.Message
                                        </span>
                                    </div>
                                }

                                <div class="card-content">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-user-times" style="font-size:24px"></i>
                                        </span>
                                        <div class="form-group label-floating">
                                            <label class="control-label">User Name</label>
                                            <input type="text" name="username" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-lock" style="font-size:30px"></i> &nbsp; 
                                        </span>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Password</label>
                                            <input type="password" name="password" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-wd btn-m">Log In</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>